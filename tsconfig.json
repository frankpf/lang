{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": ["es5", "es6", "es7", "es2018", "es2019"],
		"baseUrl": ".",
		"paths": {
			"#src/*": [
				"./src/*",
			],
			"#tests/*": [
				"./tests/*",
			],
			"*": ["node_modules/*", "src/_vendor/*"]
		}
	},
	"include": ["src/**/*", "tests/**/*"]
}
